@model IEnumerable<FarmersConnectWebApp.Models.Product>

@{
    ViewData["Title"] = "View Products";
}

<style>
    body {
        background: linear-gradient(to bottom right, #e0f7e9, #fffde7);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .view-products-container {
        text-align: center;
        padding: 50px 20px;
    }

    .view-products-title {
        color: #2e7d32;
        font-size: 3em;
        margin-bottom: 20px;
    }

    .view-products-description {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 30px;
    }

    .filter-form {
        margin-bottom: 40px;
    }

    .form-control {
        border-radius: 10px;
        padding: 15px;
        font-size: 1.1em;
        width: 100%;
        max-width: 400px;
        margin: 10px auto;
    }

    .btn-filter {
        padding: 15px 30px;
        font-size: 1.2em;
        border-radius: 10px;
        background-color: #2e7d32;
        color: white;
        margin-top: 20px;
        min-width: 150px;
    }

    .table {
        margin-top: 40px;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.1);
    }

        .form-control {
            font-size: 1em;
            padding: 12px;
        }

        .btn-filter {
            width: 80%;
            font-size: 1em;
        }
    }
</style>

<div class="view-products-container">
    <h1 class="view-products-title">View and Filter Products</h1>
    <p class="view-products-description">You can filter products by farmer,date and category below.</p>

    <!-- Filter Form -->
    <form method="get" class="filter-form">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" name="startDate" id="startDate" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" name="endDate" id="endDate" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="category" class="form-label">Category</label>
                    <input type="text" name="category" id="category" class="form-control" />
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label for="farmerId" class="form-label">Farmer</label>
                    <select name="farmerId" id="farmerId" class="form-control">
                        <option value="">Select Farmer</option>
                         @if (ViewBag.Farmers != null)
                          {
                            @foreach (var f in (IEnumerable<SelectListItem>)ViewBag.Farmers)
                        {
                                <option value="@f.Value">@f.Text</option>
                        }
                          }
                    </select>
                </div>
            </div>
        </div>

        <button type="submit" class="btn-filter w-100">Filter Products</button>
    </form>

    <!-- Product Table -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.DateAdded.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
