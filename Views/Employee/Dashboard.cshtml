@{
    ViewData["Title"] = "Employee Dashboard";
}

<style>
    body {
        background: linear-gradient(to bottom right, #e0f7e9, #fffde7);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .dashboard-container {
        text-align: center;
        padding: 50px 20px;
    }

    .dashboard-title {
        color: #2e7d32;
        font-size: 3em;
        margin-bottom: 10px;
    }

    .dashboard-description {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 30px;
    }

    .btn-dashboard {
        padding: 15px 30px;
        font-size: 1.1em;
        border-radius: 10px;
        margin: 10px;
        min-width: 150px;
    }
        .btn-dashboard {
            width: 80%;
            font-size: 1em;
        }
    }
</style>

<div class="dashboard-container">
    <h1 class="dashboard-title">Employee Dashboard</h1>
    <p class="dashboard-description">Manage farmer profiles and view product listings.</p>

    <!-- Dashboard Buttons -->
    <div class="d-flex flex-column align-items-center mt-5">
        <a class="btn btn-success btn-dashboard" asp-controller="Employee" asp-action="AddFarmer">Add Farmer Profile</a>
        <a class="btn btn-primary btn-dashboard" asp-controller="Employee" asp-action="ViewProducts">View Products</a>
    </div>
</div>
