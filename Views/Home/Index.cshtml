@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(to bottom right, #e0f7e9, #fffde7);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .home-container {
        text-align: center;
        padding: 50px 20px;
    }

    .home-title {
        color: #2e7d32;
        font-size: 3em;
        margin-bottom: 10px;
    }

    .home-description {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 30px;
    }

    .home-image {
        max-width: 90%;
        height: auto;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .btn-role {
        padding: 15px 30px;
        font-size: 1.1em;
        border-radius: 10px;
        margin: 10px;
        min-width: 150px;
    }

     media screen and (max-width: 600px) {
        .home-title {
            font-size: 2em;
        }

        .btn-role {
            width: 80%;
            font-size: 1em;
        }
    }
</style>

<div class="home-container">
    <h1 class="home-title">Welcome to Agri-Energy Connect</h1>
    <p class="home-description">Empowering South African farmers with sustainable agriculture and green energy technology.</p>

    <img src="/images/farm-solar.jpeg" alt="Farm with solar panels" class="home-image" />

    <div>
        <p class="role-subtitle">Please select your role:</p>
        <a href="/Account/Login?role=Farmer" class="btn btn-success btn-role"> Farmer</a>
        <a href="/Account/Login?role=Employee" class="btn btn-primary btn-role">Employee</a>
    </div>
</div>

